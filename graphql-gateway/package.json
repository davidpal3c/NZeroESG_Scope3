{
  "name": "nzeroesg-graphql-gateway",
  "version": "1.0.0",
  "description": "GraphQL Gateway for NZeroESG system with authentication and service orchestration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": ["graphql", "apollo", "gateway", "esg", "carbon-footprint"],
  "author": "NZeroESG Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "apollo-server-express": "^3.12.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-type-json": "^0.3.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^0.12.0",
    "graphql-rate-limit": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/morgan": "^1.9.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/graphql-depth-limit": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.6",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js",
    "ignore": ["src/**/*.test.ts"],
    "exec": "ts-node ./src/index.ts"
  }
}