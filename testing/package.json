{
  "name": "nzeroesg-testing",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for NZeroESG multi-phase system",
  "scripts": {
    "test": "jest",
    "test:phase1": "jest --testPathPattern=phase1",
    "test:auth": "jest --testPathPattern=auth-service",
    "test:graphql": "jest --testPathPattern=graphql-gateway", 
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:db:setup": "node utils/setupTestDb.js",
    "test:db:teardown": "node utils/teardownTestDb.js",
    "test:db:seed": "node utils/seedTestDb.js",
    "test:env:validate": "node utils/validateTestEnv.js"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/__tests__"],
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)",
      "**/?(*.)+(spec|test).(ts|js)"
    ],
    "collectCoverageFrom": [
      "../auth-service/src/**/*.{ts,js}",
      "../graphql-gateway/src/**/*.{ts,js}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/config/jest.setup.js"],
    "testTimeout": 30000,
    "maxConcurrency": 5
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/node": "^20.10.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "supertest": "^6.3.3",
    "@testcontainers/postgresql": "^10.4.0",
    "testcontainers": "^10.4.0",
    "@apollo/server": "^4.10.0",
    "graphql": "^16.8.1",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  }
}